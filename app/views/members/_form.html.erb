<%= simple_form_for @member, defaults: { wrapper_html: { class: 'row' } } do |f| %>
    <%= f.input :name,
        label: "Nama",
        error: "Nama tidak boleh kosong!" %>
    <%= f.input :phone,
        label: "Nomor Telepon",
        input_html: { onkeydown: "phoneNumCheck(event)" } %>
    <%= f.input :address,
        label: "Alamat" %>
    <%= f.association  :cetya, 
        label: "Cetya",
        error: "Harus dipilih",
        collection: Cetya.all.order(:cetya_name),
        label_method: :cetya_name,
        prompt: "-Pilih Cetya-" %>
    <%= f.input :gender,
        label: "Jenis Kelamin", 
        as: :select,
        prompt: "-Pilih Jenis Kelamin-",
        collection: [["Laki-Laki", "Laki-Laki"], 
                    ["Perempuan", "Perempuan"], ["Lainnya", "Lainnya"]],
        error: "Tidak boleh kosong!" %>
    <%= f.input :education,
        label: "Pendidikan" %>
    <%= f.input :line_id,
        label: "ID Line"%>
    <%= f.input :place_of_birth, 
        label: "Tempat Lahir" %>
    <%= f.input :date_of_birth, 
        label: "Tanggal Lahir", 
        as: :string,
        input_html: { class: "datepicker" } %>
    <!-- <%= f.input :avatar, 
        as: :file,
        label: "Foto (max. 5MB)",
        input_html: { class: "btn-file", accept: "image/*" } %> -->
    <%= f.button :submit, "Simpan Data", class: "btn-margin-r-10" %>
    <%= f.button :button, "Hapus Formulir", 
        type: :reset, class: "btn btn-danger" %>
<% end %>
